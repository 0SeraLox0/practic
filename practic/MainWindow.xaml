<Window x:Class="practic.MainWindow"
        Window.WindowState="Maximized"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practic"
        mc:Ignorable="d"
        Title="MainWindow"  MinHeight="1080" MinWidth="1920">
    <Window.Resources>
        
    </Window.Resources>
    <Grid ShowGridLines="False">
        <Grid.Background>
            <ImageBrush ImageSource="/TV - 28.png"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Source="/Images/list.png" Grid.Row="1" Height="900" Width="900" VerticalAlignment="Top"/>


        <TextBlock Grid.Row="0" Text="АВТОРИЗАЦИЯ" VerticalAlignment="Bottom" HorizontalAlignment="Center" Foreground="White" FontSize="72" FontFamily="Segoe Print"/>
        <StackPanel Orientation="Vertical" Grid.Row="1" Width="450" Height="530" VerticalAlignment="Top">
            <Grid ShowGridLines="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Image Source="/Images/Oval1.png" Grid.Row="1" Stretch="Fill"/>
                <Image Source="/Images/Oval1.png" Grid.Row="3" Stretch="Fill"/>
                <TextBox Style="{DynamicResource TextBoxStyle1}" x:Name="loginInput" Grid.Row="1" 
                     FontSize="48" FontFamily="Segoe Print" Text="Логин" Foreground="White"
                     Margin="15 0 0 0" PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown" SelectionBrush="#00000000" BorderBrush="#00000000" SelectionTextBrush="White" Background="#00000000"/>
                <TextBox Style="{DynamicResource TextBoxStyle1}" x:Name="passwordInput" Grid.Row="3" Background="#00000000" 
                     FontSize="48" FontFamily="Segoe Print" Text="Пароль"
                     Foreground="White" Margin="15 0 0 0" BorderBrush="#00000000" PreviewMouseLeftButtonDown="passwordInput_PreviewMouseLeftButtonDown" SelectionBrush="#00000000"/>
                <TextBlock Grid.Row="5" Background="#00000000" 
                     FontSize="30" FontFamily="Segoe Print" Text="Нет аккаунта?"
                     Foreground="#FF797979" Margin="0 0 0 0" TextAlignment="Center"/>
                <TextBlock Grid.Row="6" Background="#00000000"
                     FontSize="48" FontFamily="Segoe Print" Text="Регистрация"
                     Foreground="Black" Margin="0 0 0 0" TextAlignment="Center" MouseLeftButtonDown="TextBox_MouseLeftButtonDown" FontWeight="Bold"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>