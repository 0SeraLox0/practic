<Window x:Class="practic.Register"
        Window.WindowState="Maximized"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practic"
        mc:Ignorable="d"
        Title="MainWindow"  MinHeight="1080" MinWidth="1920">
    <Grid ShowGridLines="True">
        <Grid.Background>
            <ImageBrush ImageSource="/TV - 28.png"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Source="/Images/register.png"  Grid.Row="1" Height="900" Width="700" VerticalAlignment="Top" Margin="80 0 0 0"/>


        <TextBlock Grid.Row="0" Text="РЕГИСТРАЦИЯ" VerticalAlignment="Bottom" HorizontalAlignment="Center" Foreground="White" FontSize="72" FontFamily="Segoe Print"/>
        <StackPanel Orientation="Vertical" Grid.Row="1" Width="450" Height="850" VerticalAlignment="Top">
            <Grid x:Name="text" ShowGridLines="True" PreviewMouseLeftButtonDown="text_PreviewMouseLeftButtonDown">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Image Source="/Images/Oval1.png" Grid.Row="1" Stretch="Fill"/>
                <Image Source="/Images/Oval1.png" Grid.Row="3" Stretch="Fill"/>
                <Image Source="/Images/Oval1.png" Grid.Row="5" Stretch="Fill"/>
                <Image Source="/Images/Oval1.png" Grid.Row="7" Stretch="Fill"/>
                <Image Source="/Images/Oval1.png" Grid.Row="9" Stretch="Fill"/>
                <Image Source="/Images/Oval1.png" Grid.Row="11" Stretch="Fill"/>
                <TextBox x:Name="NameInput" Style="{DynamicResource TextBoxStyle1}" Grid.Row="1"
                    FontSize="48" FontFamily="Segoe Print" Text="Имя" Foreground="White"
                    Margin="15 0 0 0" SelectionBrush="#00000000"
                    BorderBrush="#00000000" SelectionTextBrush="White" Background="#00000000" PreviewMouseLeftButtonDown="NameInput_PreviewMouseLeftButtonDown"/>
                <TextBox x:Name="SurnameInput" Style="{DynamicResource TextBoxStyle1}" Grid.Row="3"
                    FontSize="48" FontFamily="Segoe Print" Text="Фамилия" Foreground="White"
                    Margin="15 0 0 0" SelectionBrush="#00000000"
                    BorderBrush="#00000000" SelectionTextBrush="White" Background="#00000000" PreviewMouseLeftButtonDown="SurnameInput_PreviewMouseLeftButtonDown"/>
                <TextBox x:Name="LoginInput" Style="{DynamicResource TextBoxStyle1}" Grid.Row="5"
                    FontSize="48" FontFamily="Segoe Print" Text="Логин" Foreground="White"
                    Margin="15 0 0 0" SelectionBrush="#00000000"
                    BorderBrush="#00000000" SelectionTextBrush="White" Background="#00000000" PreviewMouseLeftButtonDown="LoginInput_PreviewMouseLeftButtonDown"/>
                <TextBox x:Name="PasswordInput" Style="{DynamicResource TextBoxStyle1}" Grid.Row="7"
                    FontSize="48" FontFamily="Segoe Print" Text="Пароль" Foreground="White"
                    Margin="15 0 0 0" SelectionBrush="#00000000"
                    BorderBrush="#00000000" SelectionTextBrush="White" Background="#00000000" PreviewMouseLeftButtonDown="PasswordInput_PreviewMouseLeftButtonDown"/>
                <TextBox x:Name="PhoneInput" Style="{DynamicResource TextBoxStyle1}" Grid.Row="9"
                    FontSize="48" FontFamily="Segoe Print" Text="Телефон" Foreground="White"
                    Margin="15 0 0 0" SelectionBrush="#00000000"
                    BorderBrush="#00000000" SelectionTextBrush="White" Background="#00000000" PreviewMouseLeftButtonDown="PhoneInput_PreviewMouseLeftButtonDown"/>
                <TextBox x:Name="MailInput" Style="{DynamicResource TextBoxStyle1}" Grid.Row="11"
                    FontSize="48" FontFamily="Segoe Print" Text="Почта" Foreground="White"
                    Margin="15 0 0 0" SelectionBrush="#00000000"
                    BorderBrush="#00000000" SelectionTextBrush="White" Background="#00000000" PreviewMouseLeftButtonDown="MailInput_PreviewMouseLeftButtonDown"/>
                <CheckBox FontFamily="Segoe Print" Grid.Row="13" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10 0 0 30" Checked="CheckBox_Checked" Background="#FFA50000" BorderBrush="#FFA50000" IsChecked="False">
                    <CheckBox.RenderTransform>
                        <ScaleTransform ScaleX="3" ScaleY="3"/>
                    </CheckBox.RenderTransform>
                </CheckBox>
                <TextBlock Grid.Row="13" Background="#00000000" 
                    FontSize="24" FontFamily="Segoe Print" Text="Нажмите, если вы учитель"
                    Foreground="#FF797979" Margin="63,8,28,7" TextAlignment="Center"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
